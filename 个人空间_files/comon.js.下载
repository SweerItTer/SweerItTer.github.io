//	classArr = classes.s
//})

//多选框
$(".select").on("click",function(){
	$(this).toggleClass("selected");
})

//
$(".code-box .edit").on("click",function(){
	$(".code-box .select").css("display","inline-block").show();
	$(this).css("color","#F01414").text("确定删除");
})
